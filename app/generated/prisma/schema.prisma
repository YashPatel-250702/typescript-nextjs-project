generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Batsman
  Bowler
  AllRounder
  WicketKeeper
}

model Teams {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  country   String
  coach     String
  captain   String
  isActive  Boolean  @default(true)
  createdAt DateTime
  updatedAt DateTime

  player Player[]
}

model Player {
  id              Int      @id @default(autoincrement())
  name            String
  age             Int
  jersyNo         Int      @unique
  role            Role     @default(Batsman)
  totalRuns       Int
  noOfMatchPlayed Int
  teamId          Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  team Teams @relation(fields: [teamId], references: [id])
}
